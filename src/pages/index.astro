---
import Base from "@/layouts/Base.astro";
import Parallax from "@/components/Parallax.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntry } from "astro:content";
import { FaCheck, FaLightbulb } from "react-icons/fa";

const homepage = await getEntry("homepage", "-index");
const { banner, slogan, services, companies } = homepage.data;

import { Image } from 'astro:assets';
const bannerImage = "/images/me_thinking.jpg";
import servicesImage from '../images/me.png';

const importImage = async (imageName, darkMode = false) => {
  if (darkMode) {
    const darkModeImageName = `${imageName}_dark`; // Add "_dark" suffix for dark mode image
    try {
      // Try importing dark mode image
      const { default: darkModeImage } = await import(`../images/companies/${darkModeImageName}.png`);
      return darkModeImage;
    } catch (error) {}
  }
  
  // If dark mode is false or dark mode image not found, import original image
  const { default: originalImage } = await import(`../images/companies/${imageName}.png`);
  return originalImage;
};
---

<Base>
  <Parallax 
    parallaxImage={bannerImage}
  >
    <div class="text-center md:col-10 lg:col-7">
      <h1
        set:html={markdownify(banner.title)}
        class="text-white mb-4 text-h3 lg:text-h1"
      />
      <p set:html={markdownify(banner.content)} class="text-white mb-8" />
    </div>
  </Parallax>

  <!-- Slogan -->
  <section class="section p-6 lg:p-14 bg-primary dark:bg-darkmode-primary">
    <div class="container">
      <div class="row text-center">
        <h1 class="text-h3 lg:text-h1 text-white dark:text-black flex items-center justify-center">
          <FaLightbulb className="mr-6" />
          {markdownify(slogan.title)}
        </h1>
      </div>
    </div>
  </section>

  <!-- Companies -->
  <section class="section">
    <div class="container">
      <div class="text-center">
        <h1
          set:html={markdownify(companies.title)}
          class="mb-16 text-h4 lg:text-h2"
        />
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 lg:gap-8">
        {companies.logos.map(async company => {
          const { name, image } = company;
          // Dynamically import the image based on the company's name and dark mode setting
          const lightImage = await importImage(image);
          const darkImage = await importImage(image, true);

          return (
            <div key={name}>
              <Image
                src={lightImage}
                alt={name}
                key={name}
                className="inline-block dark:hidden"
                widths={[180, 360, 600, 800]}
                sizes="(max-width: 640px) 180px, (max-width: 768px) 360px, (max-width: 1024px) 600px, 800px"
                loading="lazy"
              />
              {darkImage && (
                <Image
                  src={darkImage}
                  alt={`${name} (Dark Mode)`}
                  key={`${name}-dark`}
                  className="hidden dark:inline-block"
                  widths={[180, 360, 600, 800]}
                  sizes="(max-width: 640px) 180px, (max-width: 768px) 360px, (max-width: 1024px) 600px, 800px"
                  loading="lazy"
                />
              )}
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="section-sm bg-gradient">
    <div class="container">
      <div class="row items-center justify-between">
        <div class="mb-6 md:col-7 lg:col-6 md:order-2">
          <h2 set:html={markdownify(services.title)} class="mb-4" />
          <p set:html={markdownify(services.content)} class="mb-8 text-lg" />
          <ul>
            {services.bulletpoints.map((bullet: string) => (
              <li class="relative mb-4 pl-6">
                <FaCheck className={"absolute left-0 top-1.5"} />
                <span set:html={markdownify(bullet)} />
              </li>
            ))}
          </ul>
          {services.button.enable && (
            <div class="flex justify-center md:justify-start">
              <a class="btn btn-primary lg:mt-5" href={services.button.link}>
                {services.button.label}
              </a>
            </div>
          )}
        </div>
        <div class="mb:md-0 mb-6 md:col-5 md:order-1">
          <Image
            src={servicesImage}
            alt={services.imageAlt}
            widths={[180, 360, 600, 800, servicesImage.width]}
            sizes={`(max-width: 360px) 180px, (max-width: 720px) 360px, (max-width: 1200px) 600px, (max-width: 1600px) 800px, ${servicesImage.width}px`}
            loading="lazy"
            class="rounded"
          />
        </div>
      </div>
    </div>
  </section>
</Base>
