import { categoryMetadata } from "@/lib/categoryMetadata";

const { category } = Astro.props;

// Handle lower/upper case
function getCategoryMetadata(category) {
  const normalizedCategory = category.toLowerCase();
  const normalizedMetadata = Object.keys(categoryMetadata).reduce((acc, key) => {
    acc[key.toLowerCase()] = categoryMetadata[key];
    return acc;
  }, {});

  return normalizedMetadata[normalizedCategory] || { name: category };
}

const metadata = getCategoryMetadata(category);
---

{metadata.name}
